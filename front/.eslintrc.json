{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended", 
        "plugin:prettier/recommended",
        "airbnb"
    ],
    "parserOptions": {

        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "html"  
    ],
    "rules": {
        "prettier/prettier": "error",
        "indent": "off" ,
        "import/extensions":"off",
        "import/no-unresolved":"off",
        "jsx-a11y/alt-text":"off",
        "react/require-default-props":"off",
        "no-undef":"off",
        "react/prop-types": "off"
    }
   
}
